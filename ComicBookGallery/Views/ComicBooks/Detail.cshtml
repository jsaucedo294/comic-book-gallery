@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1 style="color:blue">@ViewBag.Title</h1>
        <h2>ViewBag.IssueNum</h2>
        <div>@Html.Raw(ViewBag.Description)</div>
        @if (ViewBag.Artists.Length > 0)
        {
        <h3>Artists:</h3>
        }
        <ul>
            @foreach (var artist in @ViewBag.Artists)
            {
                <li>@artist</li>
            }
        </ul>
    </div>
</body>
</html>
